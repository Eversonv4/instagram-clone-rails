<main class="posts-page has-comments container">
  <section class="posts">
    <article class="post">
      <header>
        <nav>
          <%= image_tag "/images/default-avatar.jpg", class: "photo" %>
          <h4><%= post.created_by.username %></h4>
        </nav>
    
        <nav class="actions">
          <div class="action">
            <%= embedded_svg("options.svg") %>
          </div>
        </nav>
      </header>
    
      <section class="image">
        <%= image_tag "https://img.freepik.com/vetores-gratis/modelo-de-postagem-do-instagram_23-2147671656.jpg?w=2000" %>
      </section>
    
      <div class="details">
        <section class="actions">
          <nav>
            <div class="action">
              <div class="like">
                <%= embedded_svg("like.svg") %>
              </div>
            </div>
    
            <div class="action">
              <%= link_to post do %>
                <%= embedded_svg("comment.svg") %>
              <% end %>
            </div>
    
            <div class="action">
              <%= embedded_svg("share.svg") %>
            </div>
          </nav>
    
          <nav>
            <div class="action">
              <%= embedded_svg("save.svg") %>
            </div>
          </nav>
        </section>
    
        <section class="description">
          <p>
            <strong><%= post.created_by.username %></strong> <%= post.description %>
          </p>
        </section>
    
        <section class="created-at">
          <%= time_ago_in_words(post.created_at) %> atr√°s
        </section>
        
      </div>
    </article>
  </section>
</main>